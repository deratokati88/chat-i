<div class="side-bar-header">
  <div class="header-name">
    <img src=<%= current_user.image %> class = "icon_image">
    <%= link_to current_user.name, user_path(current_user) %>
  </div>
  <div class="create-zone">
    <div class="create-room">
      <%= link_to "チャットを作成する", new_room_path %>
    </div>
    <div class="create-room">
      <%= link_to "キャラを作成する　", new_chara_path %>
    </div>
  </div>
</div>

<div class="rooms">
  <% current_user.rooms.each do |room| %>
    <div class="room">
      <div class="room-name">
        <%= link_to room.name, room_messages_path(room.id) %>
      </div>
    </div>
  <% end %>
</div>