<div class='chat-room-form'>
  <img src=<%= @chara.image %> class = "chara_image">
  <h1><%= @chara.name%></h1>
  <h1>新規キャラメッセージ作成</h1>
  <%=form_with model: [@chara, @message_content], local: true do |f|%>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>
        <%= f.label :感情, class: 'chat-room-form__label'%>
      </div>
      <div class='chat-room-form__field--right'>
        <%= f.select :feeling_id, {'喜': 1, '怒': 2, '哀': 3, '楽': 4}, { include_blank: '感情'}, { class: 'form-control' , required: true } %>
      </div>
    </div>
    <div class='chat-room-form__field'>
    </div>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>
        <%= f.label :好感度, class: 'chat-room-form__label' %>
      </div>
       <div class='chat-room-form__field--right'>
          <%= f.number_field(:favo, in: 0..100, step: 1) %>
      </div>
    </div>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>
        <%= f.label :メッセージ内容, class: 'chat-room-form__label'%>
      </div>
      <div class='chat-room-form__field--right'>
        <%= f.text_field :content, class: 'chat__room_name chat-room-form__input', placeholder: 'チャットルーム名を入力してください'%>
      </div>
    </div>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'></div>
      <div class='chat-room-form__field--right'>
        <%= f.submit class: 'chat-room-form__action-btn'%>
      </div>
    </div>
  <% end %>
</div>